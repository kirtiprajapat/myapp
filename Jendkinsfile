pipeline{
    agent any 

       stages{
           stage('clone') {
               steps{
                   git 'https://github.com/kirtiprajapat/myapp.git'
            } 
        }
        stage('build'){
            steps {
                sh 'docker build -t myapp .'
            }
        }
        stage('Run container'){
            steps {
                sh 'docker stop myapp || true && docker rm myapp || true'
                sh 'docker run -d -name  myapp -p 80:3000 myapp'
            }
        }
    }
}