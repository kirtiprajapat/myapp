pipeline {
    agent any
 
    environment {
        NODE_ENV = 'production'
        APP_NAME = 'my-node-app'
        APP_DIR = 'myapp' // this should match your repo root folder if it gets cloned into one
    }
 
    stages {
        stage('Clone repository') {
            steps {
                echo 'Cloning repository...'
git 'https://github.com/kirtiprajapat/myapp.git'
            }
        }
 
        stage('Install dependencies') {
            steps {
                dir("${APP_DIR}") {
                    echo 'Installing dependencies...'
                    sh 'npm install'
                    sh 'npm install -g pm2'
                }
            }
        }
 
        stage('Start or Reload App with PM2') {
            steps {
                dir("${APP_DIR}") {
                    echo 'Starting or reloading the Node.js app with PM2...'
                    sh '''
                        if pm2 list | grep -q $APP_NAME; then
                            echo "Reloading existing app..."
                            pm2 reload $APP_NAME --update-env
                        else
                            echo "Starting app for the first time..."
                            pm2 start app.js --name "$APP_NAME" --watch
                        fi
                    '''
                }
            }
        }
 
        stage('PM2 Process List') {
            steps {
                echo 'Listing PM2 processes...'
                sh 'pm2 list'
            }
        }
    }
 
    post {
        success {
            echo 'Deployment successful. App is running with PM2.'
        }
 
        failure {
            echo 'Deployment failed. Check PM2 logs and Jenkins output.'
        }
 
        cleanup {
            echo 'Note: App will continue running. No cleanup performed.'
        }
    }
}