pipeline {
    agent any
 
    environment {
        NODE_ENV = 'production'
    }
 
    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out source code…'
git url: 'https://github.com/kirtiprajapat/myapp.git', branch: 'master'
            }
        }
 
        stage('Install Dependencies') {
            steps {
                echo 'Installing npm dependencies…'
                sh 'npm install'
            }
        }
 
        stage('Run Tests') {
            steps {
                echo 'Running tests (if any)…'
                sh 'npm test || echo "No tests defined"'
            }
        }
 
        stage('Build / Lint') {
            steps {
                echo 'Build or lint step – add commands here if needed'
                // e.g. sh 'npm run lint'
            }
        }
 
        stage('Start App') {
            steps {
                echo 'Starting the app with nodemon…'
                sh 'npx nodemon app.js'
            }
        }
    }
 
    post {
        success {
            echo '✅ Pipeline succeeded!'
        }
        failure {
            echo '❌ Pipeline failed!'
        }
        always {
            echo '— Pipeline run finished —'
        }
    }
}