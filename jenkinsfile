pipeline {
    agent any
    
    environment {
        NODE_ENV = 'production'
    }
    
    stages {
        stage('Clone repository') {
            steps {
                echo 'Cloning repository...'
git 'https://github.com/kirtiprajapat/myapp.git'
            }
        }
        
        stage('Install dependencies') {
            steps {
                echo 'Installing dependencies...'
                sh 'npm install'
                sh 'npm install -g nodemon'
            }
        }
        
        stage('Deploy application') {
            steps {
                echo 'Deploying application...'
                // Set upstream branch for git pull if not already set
                sh 'git branch --set-upstream-to=origin/master master'
                sh 'git pull origin master'  // Pull latest changes from master branch
                
                // Start application with pm2
                sh 'pm2 start app.js'
            }
        }
 
        stage('Run start') {
            steps {
                echo 'Running application with nodemon...'
                sh 'npx nodemon app.js'
            }
        }
    }
}