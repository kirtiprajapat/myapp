pipeline {
    agent any
 
    environment {
        NODE_ENV = 'production'
    }
 
    stages {
        stage('Clone repository') {
            steps {
                echo 'Cloning repository...'
git 'https://github.com/kirtiprajapat/myapp.git'
            }
        }
 
        stage('Install dependencies') {
            steps {
                echo 'Installing dependencies...'
                sh 'npm install'
            }
        }
 
        stage('Deploy Application') {
            steps {
                echo 'Deploying application...'
 
                // Pull the latest changes
                sh 'git pull'
 
                // Ensure app is not running, if it is, kill it
                sh 'pkill -f "node app.js" || true'
 
                // Restart app with PM2 (if using PM2)
                sh 'pm2 restart app.js || pm2 start app.js'
 
                // Alternatively, if you're not using PM2, just run with 'nohup':
                // sh 'nohup node app.js > output.log 2>&1 &'
            }
        }
    }
}