pipeline {
    agent any
 
    environment {
        NODE_ENV = 'production'
        APP_NAME = 'my-node-app'
        APP_DIR = 'myapp'
        PM2_PATH = './node_modules/.bin/pm2'
    }
 
    stages {
        stage('Clone repository') {
            steps {
git 'https://github.com/kirtiprajapat/myapp.git'
            }
        }
 
        stage('Install dependencies') {
            steps {
                dir("${APP_DIR}") {
                    sh 'npm install'
                    sh 'npm install pm2' // local install
                }
            }
        }
 
        stage('Start or Reload App with PM2') {
            steps {
                dir("${APP_DIR}") {
                    sh '''
                        if ${PM2_PATH} list | grep -q $APP_NAME; then
                            echo "Reloading app..."
                            ${PM2_PATH} reload $APP_NAME --update-env
                        else
                            echo "Starting app..."
                            ${PM2_PATH} start app.js --name "$APP_NAME" --watch
                        fi
                    '''
                }
            }
        }
 
        stage('PM2 Status') {
            steps {
                dir("${APP_DIR}") {
                    sh '${PM2_PATH} list'
                }
            }
        }
    }
 
    post {
        success {
            echo 'App is deployed and running with local PM2.'
        }
        failure {
            echo 'Deployment failed. Check PM2 and Jenkins logs.'
        }
    }
}